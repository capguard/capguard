FROM python:3.9-slim

WORKDIR /app

# Install system deps
RUN apt-get update && apt-get install -y curl && rm -rf /var/lib/apt/lists/*

# Install Common Dependencies
# We install capguard from the mounted volume or local context in real scenario
# Here we assume we copy the library
COPY pyproject.toml README.md /app/
COPY src/ /app/src/

RUN pip install --upgrade pip
RUN pip install --no-cache-dir .
RUN pip install --no-cache-dir langchain langchain-openai langchain-ollama requests beautifulsoup4

# Default Env Vars
ENV PYTHONUNBUFFERED=1
